                    <ContentControl Grid.Row="0"
                                    Grid.Column="0"
                                    Template="{StaticResource Card_1_Desktop}" />

                    <!--// Card - 2 //-->

                    <ContentControl Grid.Row="0"
                                    Grid.Column="1"
                                    Template="{StaticResource Card_2_Desktop}" />

                    <!--// Card - 3 //-->

                    <ContentControl Grid.Row="0"
                                    Grid.Column="2"
                                    Template="{StaticResource Card_3_Desktop}" />

                    <!--// Card - 4 //-->

